[
  {
    "name": "modelViewerWidget",
    "type": "group",
    "widget": "Virtual3DTour",
    "label": "3D Model Viewer Editor/Navigation",
    "importance": "high",
    "fields": [
      {
        "name": "models",
        "type": "list",
        "label": "Models",
        "entity": "Model",
        "min": 0,
        "field": {
          "name": "model",
          "type": "group",
          "fields": [
            {
              "label": "3D File",
              "name": "glbModel",
              "type": "file",
              "description": "3D Model (.glb | .gltf)"
            },
            {
              "name": "modelId",
              "type": "number"
            },
            {
              "name": "modelName",
              "type": "text",
              "label": "Model name"
            },
            {
              "name": "interactions",
              "type": "list",
              "min": 0,
              "field": {
                "name": "interaction",
                "type": "group",
                "fields": [
                  {
                    "name": "labelText",
                    "type": "text",
                    "label": "Label",
                    "optional": true,
                    "description": "If left blank no label will be displayed and we'll try to use the title field for screen readers"
                  },
                  {
                    "name": "label",
                    "type": "group",
                    "label": "Label Settings",
                    "importance": "low",
                    "fields": [
                      {
                        "name": "labelPosition",
                        "type": "select",
                        "label": "Label position",
                        "description": "Choose where the label should appear",
                        "options": [
                          {
                            "value": "inherit",
                            "label": "Use behavioral setting"
                          },
                          {
                            "value": "right",
                            "label": "Right aligned"
                          },
                          {
                            "value": "left",
                            "label": "Left aligned"
                          },
                          {
                            "value": "top",
                            "label": "Top aligned"
                          },
                          {
                            "value": "bottom",
                            "label": "Bottom aligned"
                          }
                        ],
                        "default": "inherit"
                      }
                    ]
                  },
                  {
                    "name": "action",
                    "type": "library",
                    "options": [
                      "H5P.AdvancedText 1.1",
                      "H5P.Image 1.1",
                      "H5P.Audio 1.5",
                      "H5P.Video 1.6",
                      "H5P.Questionnaire 1.3",
                      "H5P.FileForDownload 1.0",
                      "H5P.GoToScene 0.1"
                    ]
                  },
                  {
                    "name": "interactionpos",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "name": "modelDescriptionARIA",
              "type": "text",
              "widget": "html",
              "label": "Model description (for screen readers)",
              "description": "A text that can describe the model for the end-user. ",
              "tags": [],
              "optional": true
            }
          ]
        }
      },
      {
        "name": "startModelId",
        "type": "number",
        "default": 0
      }
    ]
  }
]
